{
  "name": "@pkg-name/monorepo",
  "version": "0.0.1-beta.1",
  "private": true,
  "packageManager": "pnpm@7.28.0",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "nr volar:helper && nr stub",
    "docs": "npm -C docs run dev",
    "docs:build": "npm -C docs run build",
    "stub": "pnpm -r --parallel --filter=./packages/* run dev",
    "build": "rimraf packages/*/{dist,es,lib} && nr -r -F \"./packages/{preset,utils,components}\" build && nr volar:helper",
    "play": "npm -C playground run dev",
    "play:build": "npm -C playground run build",
    "example": "npm -C example run dev",
    "lint": "eslint --cache .",
    "lint:fix": "nr lint --fix",
    "release": "bumpp package.json packages/**/package.json",
    "deploy": "nr build && nr play:build && nr docs:build",
    "test": "vitest",
    "test:update": "vitest -u",
    "test:coverage": "vitest --coverage",
    "volar:helper": "esno scripts/volar-helper"
  },
  "dependencies": {
    "pkg-name": "workspace:*"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.35.2",
    "@antfu/ni": "^0.20.0",
    "@pkg-name/components": "workspace:*",
    "@pkg-name/preset": "workspace:*",
    "@pkg-name/utils": "workspace:*",
    "@types/fs-extra": "^11.0.0",
    "@types/node": "^18.11.9",
    "@unocss/reset": "^0.48.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitest/ui": "^0.26.3",
    "@vue/test-utils": "^2.2.7",
    "@vueuse/core": "^9.10.0",
    "eslint": "^8.31.0",
    "esno": "^0.16.3",
    "taze": "^0.8.5",
    "lint-staged": "^13.0.3",
    "rimraf": "^3.0.2",
    "fs-extra": "^11.1.0",
    "jsdom": "^20.0.3",
    "less": "^4.1.3",
    "simple-git-hooks": "^2.8.0",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4",
    "unocss": "^0.48.0",
    "unplugin-auto-import": "^0.11.4",
    "unplugin-vue-components": "^0.22.9",
    "vite": "^4.0.0",
    "vite-plugin-dts": "^1.7.1",
    "vitepress": "1.0.0-alpha.35",
    "vitest": "^0.26.3",
    "vue": "^3.2.45",
    "vue-tsc": "^1.0.22"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --fix"
    ]
  }
}
